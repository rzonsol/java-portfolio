<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.elearning.portfolio.message">

    <class name="Message" table="MESSAGES">

        <id name="id" type="int" column="ID"><generator class="native"/></id>
        <property name="userId" column="USER_ID" type="java.lang.Integer"/>
        <property name="title" column="TITLE" type="java.lang.String"/>
        <property name="content" column="CONTENT" type="java.lang.String"/>
    </class>

</hibernate-mapping>